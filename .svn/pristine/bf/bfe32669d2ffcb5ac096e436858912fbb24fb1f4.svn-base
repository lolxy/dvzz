/* pages/ysty/shop.wxss */
view, image, text, form, scroll-view {
  box-sizing: border-box;
}
image {
  max-width: 100%;
  max-height: 100%;
}
.container {
  padding: 0;
  justify-content: flex-start;
  background-color: #f5f5f5;
}
.head {
  width: 100%;
  height: 90rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
}
.hitem {
  height: 24px;
  display: inline-block;
  line-height: 26rpx;
}
.hitem view {
  font-size: 26rpx;
  line-height: 26rpx;
  color: #999999;
  display: inline-block;
}
.hitem image {
  width: 14rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
/***  商城列表  ***/
.bitem {
  width: 100%;
  height: 202rpx;
  padding: 30rpx;
  border-bottom: 2rpx solid #ddd;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.biteml {
  height: 140rpx;
  flex: 9;
}
.itemimg {
  height: 140rpx;
  width:220rpx;
  margin-right: 30rpx;
  display: inline-block;
  vertical-align: top;
}
.itemtext {
  height: 140rpx;
  max-width: 360rpx;
  padding-top: 24rpx; 
  display: inline-block;
  vertical-align: top;
}
.itemname {
  width: 100%; 
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1em;
  color: #333333;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.itemadd {
  width: 100%;
  margin-top: 40rpx;
  font-size: 24rpx;
  line-height: 1em;
  color: #999999;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.bitemr {
  height: 140rpx;
  text-align: right;
  flex: 1;
}
.bitemr view {
  margin-top: 30rpx;
  font-size: 20rpx;
  line-height: 1em;
  color: #666666;
}