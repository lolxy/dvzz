<!--pages/mine/bind.wxml-->
<view class='container'style="background-color: #f5f5f5;">
  <image src="{{logopic}}" class='logo'/>
  <view class='form_t'>绑定手机号：{{phone}}</view>
  <view class='form_grp'>
    <input type='number' name="fVerifyCode" value="{{fVerifyCode}}" class='input_b' placeholder='请输入短信验证码' bindblur='phonein' />
    <view class='normal-btn' bindtap='getcheckimg'>获取验证码</view>
  </view>
  <view class='form_grp' wx:if="{{IsNeed==1}}">
    <input type='text' name="fPhoneNo" class='input_b' placeholder='请输入图片验证码' name="fCaptcha" value="{{fCaptcha}}"  bindblur="checkimg"/>
    <image src="{{requestimg}}" class='identify' mode="aspectFit" bindtap="getcheckimg"/>
  </view>
  <view class='form_f'>
    <view class="btn" wx:if="{{IsShow==1}}" bindtap='checkimg'>提 交 绑 定</view>
    <view class="btn enable}}" wx:else >提 交 绑 定</view>
  </view>
</view>