/* pages/mine/index/index.wxss */
view, image, text,form ,input{
  box-sizing: border-box;
}
image {
  width: 100%;
  height: 100%;
}
.user-info-top {
  width: 100%;
  height: 230rpx;
  padding: 45rpx 30rpx;
  background-repeat: no-repeat;
  background-size: cover;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: reltive;
  z-index: 100;
}
.user-avatar {
  width: 140rpx;
  height: 140rpx;
  overflow: hidden;
  border-radius: 50%;
}
.user-avatar open-data {
  width: 140rpx;
  height: 140rpx;
  overflow: hidden;
  display: block; 
}
.user-text {
  height: 140rpx;
  margin-left: 30rpx;
  padding: 15rpx 0;
}
.uname {
  padding: 15rpx 0;
  font-size: 34rpx;
  line-height: 1em;
  color: #fff;
}
.uaccount {
  padding: 15rpx 0;
  font-size: 28rpx;
  line-height:30rpx;
  margin-top: 20rpx;
  color: #fff;
}
.seticon {
  width: 40rpx;
  height: 40rpx;
  align-self: flex-start;
  top: 30rpx;
  right: 30rpx;
  position: absolute;
  z-index: 170;
}
.list {
  width: 100%;
  height: 90rpx;
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid #ddd;
  line-height: 40rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.list:nth-child(5){
  margin-bottom: 20rpx;
}
.list .items {
  height: 40rpx;
  line-height: 40rpx;
}
.list .items image{
  width: 40rpx;
  height: 40rpx; 
  margin-right: 28rpx;
  display: inline-block;
  vertical-align:top;
}
.list .items view {
  font-size: 28rpx;
  line-height: 40rpx;
  display: inline-block;
  vertical-align:top;
}
.list > image {
  width:16rpx;
  height:30rpx;
}
/*****  模态框  *****/
.modal {
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  top:0;
  left:0;
  z-index: 200;
  position: absolute;
}
.modal-fixd {
  width: 580rpx;
  height: 520rpx;
  margin: 288rpx auto 0;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden; 
  left: 0;
  right: 0;
  position: fixed;
}
.form_t {
  margin-top: 40rpx;
  font-size: 28rpx;
  line-height: 1em;
  color: #333333;
  text-align: center;
}
.form_c {
  height: 360rpx;
  padding: 40rpx 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  border-bottom: 1rpx solid #ddd;
}
.form_grp + .form_grp {
  margin-top: 54rpx;
}
.form_grp {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
}
.form_grp input {
  min-height: 60rpx;
  padding: 14rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  line-height: 30rpx!important;
  color: #333333;
  vertical-align: middle;
  border: 1rpx solid #999999;
}
.input_a {
  width: 100%;
}
.input_b {
  width: 220rpx;
}
.normal-btn {
  width: 140rpx;
  padding: 14rpx 0;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #ff6600;
  text-align: center;
  border: 1rpx solid #ff6600;
  border-radius: 10rpx;
}
.identify {
  width: 140rpx;
  height: 60rpx;
  background-color: #ddd;
}
.form_f {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: stretch;
}
.form_f > button {
  width: 50%;
  background-color: transparent;
  border-image: none;
  box-shadow: none;
  border-radius: 0;
  outline: none;
}
.form_f > button.active {
  color: #ff6600;
}
/**  退出登录按钮  **/
.items_out {
  font-size: 32rpx;
  line-height: 40rpx;
  color: #333333;
  text-align: center;
  margin-top:20rpx;
  background-color: #ffffff;
  padding:24rpx 30rpx;
  border-bottom:2rpx solid #ddd;
}