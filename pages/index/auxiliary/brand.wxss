@import '../../../style/common.wxss';
.container {
  height: 100%;
  background-color: #f3f3f3;
  position: absolute;
}
.radio-group {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center; 
}
.foot {
  height: 122rpx;
  padding: 15rpx 30rpx;
  box-shadow:  0 0 4rpx 4rpx #ddd;
}
.foot button {
  border-radius: 46rpx;
  background-color: #ff6600;
  color: #ffffff;
}
.radio.active {
  color: #ff6600;
}
