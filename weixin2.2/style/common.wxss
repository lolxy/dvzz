/***** 一般设置 *****/
view, image, text, form{
  box-sizing: border-box;
}
.container {
  width: 100%;
  background-color: #f3f3f3;
}
/*****  门店列表   *****/
.shopgrp {
  width: 100%;
  background-color: #ffffff;
}
.shophead {
  width: 100%;
  padding: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-bottom: 2rpx solid #ddd;
}
.shophead image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: middle;
}
.shophead span {
  font-size: 30rpx;
  line-height: 1em;
  color: #ff6701;
}
.shopcont {
  width: 100%;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: stretch;
  border-bottom: 2rpx solid #ddd;
}
.shop_cont_pic {
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}
.shop_cont_r {
  flex: auto;
}
.shop_cont_r .shop_cont_title {
  line-height: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.shop_cont_name {
  font-size: 24rpx;
  line-height: 1em;
  color: #333333;
  float: left;
}
.shop_cont_range {
  font-size: 24rpx;
  line-height: 1em;
  color: #999999;
  float: right;
}
.shop_cont_uname {
  margin-top: 20rpx;
  font-size: 24rpx;
  line-height: 1em;
  color: #666666;
  clear: both;
}
.shop_cont_btngrp {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.shop_cont_btngrp image{
  max-width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: center; 
}
.shop_cont_btngrp .btn {
  padding: 10rpx 40rpx;
  font-size: 24rpx;
  line-height: 1em;
  border-width: 2rpx;
  border-style: solid;
  border-radius: 8rpx;
}
.shop_cont_btngrp .btn_call {
  color: #03abf6;
  border-color: #03abf6;
}
.shop_cont_btngrp .btn_navi {
  color: #ffc007;
  border-color: #ffc007;
}
.shop_cont_btngrp .btn_praise {
  color: #8bc24a;
  border-color: #8bc24a;
}
/**  带横向滚动条的list项目  **/
.scorll_title {
  text-align: center;
}
.scorll_title image {
  max-width: 30rpx;
  max-height: 30rpx;
}
.scorll_list {
  width: 100%;
}