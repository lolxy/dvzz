/* pages/index/finddetail.wxss */
@import '../../style/common.wxss';
.fdhead {
  width: 100%;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: stretch;
}
.UPhoto {
  width: 280rpx;
  height: 280rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  flex-basis: 280rpx;
}
.fdhead > view {
  flex-basis: 400rpx;
  padding: 5rpx 0;
}
.fd_title {
  flex: auto;
  padding: 15rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.fd_title view {
  font-size: 28rpx;
  line-height: 1em;
  color: #333333;
}
.fd_title view:nth-child(2){
  color: #666666;
}
.fd_phone {
  padding: 15rpx 0;
  font-size: 28rpx;
  line-height: 1em;
  color: #333333;
}
.fd_discript {
  max-width: 400rpx;
  padding: 10rpx 0;
  font-size: 20rpx;
  line-height: 2em;
  color: #333333;
}