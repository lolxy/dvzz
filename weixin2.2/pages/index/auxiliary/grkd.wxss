/* pages/index/auxiliary/grkd.wxss */
@import '../../../style/common.wxss';
.container {
  height: 100%;
  background-color: #f3f3f3;
  position: absolute;
}
.head {
  height: 160rpx;
  padding: 30rpx;
  width: 100%;
  overflow:hidden;
  white-space:nowrap; 
  background-color: #ffffff;
  border-bottom: 2rpx solid #ddd;
}
.order_tabs {
  width: 102rpx;
  height: 98rpx;
  display: inline-block;
  text-align: center;
}
.order_tabs > view {
  margin-top: 24rpx;
  font-size: 24rpx;
  line-height: 1em;
  color: #666666;
}
.order_tabs.active > view {
  color: #ff6600;
}
.order_tabs > image {
  max-width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  display: block;
}
.order_tabs + .order_tabs {
  margin-left: 64rpx;
}
.typelist {
  width: 100%;
  margin-bottom: 20rpx;
  padding: 10rpx 20rpx;
  overflow:hidden;
  white-space:nowrap;
  background-color: #ffffff;
}
.typeitem {
  font-size: 24rpx;
  line-height: 60rpx;
  color: #999999;
  display: inline-block;
  border-bottom-width: 4rpx;
  border-bottom-style: solid;
  border-bottom-color: transparent;
}
.typeitem + .typeitem  {
  margin-left: 56rpx;
}
.typeitem.active {
  color: #ff6600;
  border-bottom-color: #ff6600;
}
.foot {
  padding: 15rpx 30rpx;
  box-shadow:  0 0 2rpx 4rpx #ddd;
}
.foot_c_grp {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.foot_c_grp .btn {
  width: 330rpx;
  height: 70rpx;
  padding: 18rpx;
  font-size: 30rpx;
  font-weight: 900;
  line-height: 1em;
  color: #ff6600;
  text-align: center;
  border: 2rpx solid #ff6600;
  border-radius: 35rpx;
}
.foot_btn {
  color: #ffffff!important;
  background-color: #ff6600;
}