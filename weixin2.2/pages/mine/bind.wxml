<!--pages/mine/bind.wxml-->
<view class='container'style="background-color: #f5f5f5;">
    <view class='modal-fixd'>
      <form bindsubmit="formSubmit">
        <view class='form_t'>绑定手机</view>
        <view class='form_c'>
          <view class='form_grp'>
            <input type='number' name="fPhoneNo" class='input_a' placeholder='请输入手机号' confirm-type='done' bindblur="phonein" value="{{phone}}"/>
          </view>
          <view class='form_grp' wx:if="{{IsShow==1}}">
            <input type='number' name="fVerifyCode" value="{{fVerifyCode}}" class='input_b' placeholder='请输入短信验证码'/>
            <view class='normal-btn' bindtap='getcheckimg'>获取验证码</view>
          </view>
          <view class='form_grp' wx:if="{{IsNeed==1}}">
            <input type='text' name="fPhoneNo" class='input_b' placeholder='请输入短信验证码' name="fCaptcha" value="{{fCaptcha}}"  bindblur="checkimg"/>
            <image src="{{requestimg}}" class='identify' mode="aspectFit" bindtap="getcheckimg"/>
          </view>
        </view>
        <view class='form_f'>
          <button type='default' bindtap="toback">取消</button>
          <button formType="submit" class='active'>绑定</button>    
        </view>
      </form>
    </view>
</view>