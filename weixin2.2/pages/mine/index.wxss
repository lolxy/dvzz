/* pages/mine/index.wxss */
view, image, text {
  box-sizing: border-box;
}
image {
  width: 100%;
  height: 100%;
}
.user-info-top {
  width: 100%;
  height: 230rpx;
  padding: 45rpx 30rpx;
  background-repeat: no-repeat;
  background-size: cover;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: reltive;
  z-index: 100;
}
.user-avatar {
  width: 140rpx;
  height: 140rpx;
  overflow: hidden;
  border-radius: 50%;
}
.user-avatar open-data {
  width: 100%;
  height: 100%;
}
.user-text {
  height: 140rpx;
  margin-left: 30rpx;
  padding: 15rpx 0;
}
.uname {
  padding: 15rpx 0;
  font-size: 34rpx;
  line-height: 1em;
  color: #fff;
}
.uaccount {
  padding: 15rpx 0;
  font-size: 28rpx;
  line-height: 1em;
  color: #fff;
}
.seticon {
  width: 40rpx;
  height: 40rpx;
  align-self: flex-start;
  top: 30rpx;
  right: 30rpx;
  position: absolute;
  z-index: 150;
}
.list {
  width: 100%;
  height: 90rpx;
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid #ddd;
  line-height: 40rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.list:nth-child(4){
  margin-bottom: 20rpx;
}
.list .items {
  height: 40rpx;
  line-height: 40rpx;
}
.list .items image{
  width: 40rpx;
  height: 40rpx; 
  margin-right: 28rpx;
  display: inline-block;
  vertical-align:top;
}
.list .items view {
  font-size: 28rpx;
  line-height: 40rpx;
  display: inline-block;
  vertical-align:top;
}
.list > image {
  width:16rpx;
  height:30rpx;
}