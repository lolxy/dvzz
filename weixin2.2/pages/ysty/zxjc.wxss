/* pages/ysty/zxjc.wxss */
view, image, text, form, scroll-view {
  box-sizing: border-box;
}
.container {
  padding: 0;
  justify-content: flex-start;
  background-color: #f5f5f5;
}
.head {
  height: 162rpx;
  width: 100%; 
  padding: 32rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: stretch;
  background-color: #ffffff;
  border-bottom: 2rpx solid #ddd;
}
.menuitem {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.muneicon {
  width: 52rpx;
  height: 52rpx;
}
.muneicon image {
  max-width: 100%;
  max-height: 100%;
}
.menutext {
  font-size: 26rpx;
  line-height: 1em;
  color: #666666;
}
.active .menutext {
  color: #1f80cd;
}
.secmenu {
  height: 88rpx;
  width: 100%;
  margin-bottom: 20rpx;
  overflow: hidden;
  background-color: #ffffff;
  white-space: nowrap;
}
.seclist {
  background-color: #ffffff;
}
.secitem {
  display: inline-block;
  margin: 10rpx 30rpx;
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 1em;
  color: #666666;
  border-bottom: 4rpx solid transparent;
}
.secitem.active {
  color: #1f80cd;
  border-bottom-color: #1f80cd;
}
.themenu {
  height: 88rpx;
  width: 100%;
  overflow: hidden;
  background-color: #ffffff;
  white-space: nowrap;
  border-bottom: 2rpx solid #ddd;
}
.thelist {
  background-color: #ffffff;
}
.theitem {
  display: inline-block;
  margin: 20rpx 30rpx;
  padding: 12rpx 30rpx;
  font-size: 24rpx;
  line-height: 1em;
  color: #666666;
}
.theitem.active {
  color: #ffffff;
  border-radius: 8rpx;
  background-color: #1f80cd;
}
/****  详情data  ****/
.cont {
  width: 100%;
  background-color: #ffffff;
}
.itemhead {
  width: 100%;
  height: 90rpx;
  padding: 30rpx;
  border-bottom: 2rpx solid #ddd;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.detailname {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1em;
  color: #333333;
}
.detailamount {
  font-size: 24rpx;
  font-weight: bold;
  line-height: 28rpx;
  color: red;
}
.itemlist {
  width: 100%;
  height: 90rpx;
  padding: 16rpx 30rpx;
  border-bottom: 2rpx solid #ddd;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.combinename {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 28rpx;
  line-height: 1em;
  color: #333333;
  flex: 4; 
}
.rightgrp {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  line-height: 56rpx;
  flex: 6; 
}
.itemamount {
  margin-right: 38rpx;
  font-size: 26rpx;
  line-height: 28rpx;
  color: #333333;
  text-align: right;
}
.item-btn {
  display: inline-block;
  height: 56rpx;
  margin-right: 48rpx;
  padding: 16rpx;
  border: 2rpx solid #1f80cd;
  border-radius: 8rpx;
  font-size: 20rpx;
  line-height: 1em;
  color: #1f80cd;
  text-align: center;
}
.item-qr {
  width: 40rpx;
  height: 36rpx;
  margin-right: 54rpx;
  display: inline-block;
}
.right-menu {
  width: 16rpx;
  height: 30rpx;
  display: inline-block;
}