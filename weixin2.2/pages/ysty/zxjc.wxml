<!--pages/ysty/zxjc.wxml-->
<view class="container">
  <view class="head">
    <block wx:for="{{menulist}}" wx:for-item="item1" wx:for-index='index1'>
      <view class="menuitem {{current1==index1?'active':''}}" data-current='{{index1}}' bindtap='changedata'>
        <view class='muneicon'><image src='{{item1.fImageUrl}}'></image></view>
        <view class='menutext'>{{item1.fType1Name}}</view>
      </view>      
    </block>
  </view>
  <view class='secmenu'>
    <scroll-view class='seclist' scroll-x style="width: auto;overflow:hidden;">
      <view class="secitem {{current2==index2?'active':''}}" wx:for="{{menulist[current1].data2}}" wx:for-item='item2'wx:for-index='index2' data-current='{{index2}}' bindtap='changedata2'>{{item2.fType2Name}}</view>
    </scroll-view>
  </view>
  <view class='themenu'>
    <scroll-view class='thelist' scroll-x style="width: auto;overflow:hidden;">
      <view class="theitem {{current3==index3?'active':''}}" wx:for="{{menulist[current1].data2[current2].data4}}" wx:for-item='item3'wx:for-index='index3' data-current='{{index3}}' bindtap='changedata3' data-typecode='{{item3.fType3Code}}' data-fselectmatid='{{item3.fSelectMatID}}'>{{item3.fType3Name}}</view>
    </scroll-view>
  </view>
  <view class='cont'>
    <view class='itemhead'>
      <view class='detailname'>{{currentft3cn}}</view>
      <view class='detailamount'>{{fAmount}}</view>
    </view>
    <block wx:for='{{itemlist}}' wx:for-item='item4'wx:for-index='index4'>
    <view class='itemlist'>
      <view class='combinename'>{{item4.fSpace}}{{item4.fPosition}}</view>
      <view class='rightgrp'>
        <view class='itemamount'>{{item4.fAmount}}</view>
        <view class='item-btn' data-fseriescode="{{item4.fType3Code}}" data-fsmdid="{{item4.fSelectMatDetailID}}" bindtap='jumpsmol'>线上选材</view>
        <image class='item-qr' src='{{qricon}}'></image>
        <image class='right-menu' src='{{righticon}}'></image>
      </view>
    </view>
    </block>
  </view>
</view>
